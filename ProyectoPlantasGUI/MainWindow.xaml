<Window x:Class="ProyectoPlantasGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoPlantasGUI"
        mc:Ignorable="d"
        Title="El Salto - Login de Usuario" Height="550" Width="1100">
    <Grid>
        <Label x:Name="lblUsername" Content="Ingrese usuario" HorizontalAlignment="Left" Margin="55,60,0,0" VerticalAlignment="Top"></Label>
        <Label x:Name="lbPassword" Content="Ingrese contraseña" HorizontalAlignment="Left" Margin="55,100,0,0" VerticalAlignment="Top"></Label>
        <Label x:Name="lblMensaje" Content="" HorizontalAlignment="Left" Margin="215,180,0,0" VerticalAlignment="Top"></Label>

        <TextBox x:Name="txtUsuario" HorizontalAlignment="Left" Margin="215,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"></TextBox>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="215,105,0,0" VerticalAlignment="Top" Width="200" ></PasswordBox>

        <Button x:Name="btnIniciarSesion" Content="Iniciar Sesión" HorizontalAlignment="Left" Margin="255,160,0,0" VerticalAlignment="Top" Width="120" Click="btnIniciarSesion_Click"></Button>

    </Grid>
</Window>
